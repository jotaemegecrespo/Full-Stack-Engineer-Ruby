<div class="search">
  <%= image_tag 'marvel_logo.png' %>
  <input type="text">
</div>

<div class="comics">
  <% @search.comics.each do |comic| %>
    <div class="comic">
      <%= image_tag comic.image_url %>
    </div>
  <% end %>

  <div class="actions">
    <%= link_to 'Previous Page', comics_path(page: @search.previous_page), class: "previous #{@search.previous_page.present? ? '' : 'disabled'}" %>
    <%= link_to 'Next Page', comics_path(page: @search.next_page), class: "next #{@search.next_page.present? ? '' : 'disabled'}"%>

  </div>
</div>
